{
    "client.moderation.kick": {
        "nick": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        }
    },

    "client.moderation.ban": {
        "nick": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        }
    },

    "client.moderation.unban": {
        "nick": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        }
    },

    "client.user.login": {
        "assertion": {
            "type": "string",
            "maxlength": 3000,
            "regexp": "^.+$"
        }
    },

    "client.user.register": {
        "assertion": {
            "type": "string",
            "maxlength": 3000,
            "regexp": "^.+$"
        },
        "nick": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        }
    },

    "client.room.list": {
    },

    "client.room.join": {
        "room": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        }
    },

    "client.room.message": {
        "room": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        },
        "text": {
            "type": "string",
            "minlength": 1,
            "maxlength": 200
        }
    },

    "client.room.move": {
        "room": {
            "type": "string",
            "minlength": 3,
            "maxlength": 20,
            "regexp": "^[a-zA-Z0-9_]+$"
        },
        "position": {
            "object": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "direction": {
                    "regexp": "^(left|right)$"
                }
            }
        }
     }
}
